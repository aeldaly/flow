<p id="notice"><%= notice %></p>

<div class="author-container">
  <h1>Authors</h1>

  <table class="table">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Username</th>
        <th>Password</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @authors.each do |author| %>
        <tr>
          <td><%= author.first_name %></td>
          <td><%= author.last_name %></td>
          <td><%= author.username %></td>
          <td><%= author.password %></td>
          <td><%= link_to 'Show', author %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Author', new_author_path, class: "primary-link" %>
</div>